{
  "name": "chromenu",
  "productName": "Chromenu",
  "version": "1.1.4",
  "description": "Mobile Chromium in your menu bar",
  "main": "main/index.js",
  "bin": {
    "chromenu": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc --pretty -p .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tslint": "tslint -p .",
    "stylelint": "stylelint renderer/style.css",
    "lint": "npm-run-all --parallel tslint stylelint",
    "watch": "tsc -p . --watch",
    "debug": "NODE_ENV=development electron .",
    "start": "NODE_ENV=production electron .",
    "preversion": "npm run lint",
    "preuninstall": "node ./bin/cli.js --unsetup-launchctl",
    "release": "npm run lint && ./scripts/make-release.sh",
    "fmt": "prettier --write bin/cli.js 'main/**/*.ts' 'renderer/**/*.ts' 'renderer/**/*.tsx'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhysd/Chromenu.git"
  },
  "keywords": [
    "browser",
    "electron",
    "manubar"
  ],
  "author": "rhysd <lin90162@yahoo.co.jp>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rhysd/Chromenu/issues"
  },
  "homepage": "https://github.com/rhysd/Chromenu#readme",
  "devDependencies": {
    "@types/cheerio": "^0.22.10",
    "@types/loglevel": "^1.4.29",
    "@types/mousetrap": "^1.5.33",
    "@types/node": "^11.10.4",
    "@types/react": "^16.8.6",
    "@types/react-addons-shallow-compare": "^0.14.18",
    "@types/react-dom": "^16.8.2",
    "@types/react-redux": "^7.0.1",
    "@types/redux": "^3.6.31",
    "@types/request": "2.48.1",
    "electron-packager": "^13.1.0",
    "npm-run-all": "^4.0.0",
    "prettier": "^1.16.4",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "tslint": "^5.13.1",
    "tslint-react": "^3.6.0",
    "typescript": "~3.3.3333"
  },
  "dependencies": {
    "bulma": "^0.7.4",
    "cheerio": "^0.22.0",
    "electron": "^9.1.0",
    "electron-in-page-search": "^1.2.3",
    "font-awesome": "^4.7.0",
    "heredocument": "^2.0.2",
    "immutable": "^3.8.1",
    "loglevel": "^1.4.1",
    "menubar": "github:rhysd/menubar#rhysd-fixes",
    "mousetrap": "^1.6.0",
    "page-icon": "^0.3.0",
    "react": "^16.8.3",
    "react-addons-shallow-compare": "^15.4.2",
    "react-component-bytesize-icons": "^2.0.1",
    "react-dom": "^16.8.3",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "request": "^2.79.0"
  },
  "prettier": {
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  }
}
